<div class="home-news mb-5">
    <div class="container">
        <nav class="home-news__header row">
            <div class="col col-lg-8 d-flex align-items-center">
                <h3 class="home-news__topic">Tin tức &#8226;</h3>
                <span class="home-news__hline"></span>
            </div>
            <div class="nav nav-tabs d-none d-lg-block col-4" id="nav-tab" role="tablist">
                <button class="nav-link active" id="nav-home-tab" data-bs-toggle="tab" data-bs-target="#nav-home" type="button" role="tab" aria-controls="nav-home" aria-selected="true">
                    Tuyển sinh
                </button>
                <button class="nav-link" id="nav-profile-tab" data-bs-toggle="tab" data-bs-target="#nav-profile" type="button" role="tab" aria-controls="nav-profile" aria-selected="false">
                    Du học
                </button>
                <button class="nav-link" id="nav-contact-tab" data-bs-toggle="tab" data-bs-target="#nav-contact" type="button" role="tab" aria-controls="nav-contact" aria-selected="false">
                    Xuất khẩu lao động
                </button>
            </div>
        </nav>
        <div class="home-news__wrapper row">
            <div class="home-news__main col col-lg-8">
                <div class="row">
                    @foreach(var am in Model.ArticleMain)
                    {
                        <div class="col-12 col-md-6">
                            <div class="home-news__article main">
                                <a asp-controller="Post" asp-action="Details" asp-route-id="@am.Id" class="home-news__img d-block">
                                    <img src="@Url.Content("~/contents/" + am.Avartar)" />
                                </a>
                                <span class="home-news__category">@am.Category.Name</span>
                                <h4 class="home-news__title">@am.Title</h4>
                                <p class="home-news__summary" style="display: -webkit-box;-webkit-line-clamp: 2;-webkit-box-orient: vertical;overflow: hidden;">
                                    @am.Description
                                </p>
                            </div>
                        </div>
                    }
                </div>
            </div
            <div class="home-news__extra">
                <div class="tab-content d-none d-lg-block col-lg-4 mt-3" id="nav-tabContent">
                    <div class="tab-pane fade show active" id="nav-home" role="tabpanel" aria-labelledby="nav-home-tab" tabindex="0">
                        <div class="d-flex flex-column">
                            @foreach(var aone in Model.ArticleCateOne)
                            {
                                <div class="home-news__article extra">
                                    <a asp-controller="Post" asp-action="Details" asp-route-id="@aone.Id" class="home-news__img me-3 d-block">
                                        <img src="@Url.Content("~/contents/" + aone.Avartar)" />
                                    </a>
                                    <div class="d-flex flex-column flex-fill">
                                        <span class="home-news__category">@aone.Category.Name</span>
                                        <h4 class="home-news__title">@aone.Title</h4>
                                    </div>
                                </div>
                            }
                        </div>
                        <a href="#" >Xem tất cả &raquo;</a>
                    </div>
                    <div class="tab-pane fade" id="nav-profile" role="tabpanel" aria-labelledby="nav-profile-tab" tabindex="0">
                        <div class="d-flex flex-column">
                            @foreach(var atwo in Model.ArticleCateTwo)
                            {
                                <div class="home-news__article extra">
                                    <a asp-controller="Post" asp-action="Details" asp-route-id="@atwo.Id" class="home-news__img me-3 d-block">
                                        <img src="@Url.Content("~/contents/" + atwo.Avartar)" />
                                    </a>
                                    <div class="d-flex flex-column flex-fill">
                                        <span class="home-news__category">@atwo.Category.Name</span>
                                        <h4 class="home-news__title">@atwo.Title</h4>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                    <div class="tab-pane fade" id="nav-contact" role="tabpanel" aria-labelledby="nav-contact-tab" tabindex="0">
                        <div class="d-flex flex-column">
                            @foreach(var athree in Model.ArticleCateThree)
