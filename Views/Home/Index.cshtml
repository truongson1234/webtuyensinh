<div class="home-introduce">
    <div class="container pt-5 pb-3 d-flex justify-content-between h-100 position-relative">
        <div class="home-introduce__content">
            <div class="home-introduce__title">
                <h1 class="t1">Tuyển Sinh</h1>
                <h2 class="t2">du học</h2>
            </div>
            <p class="home-introduce__article">
                Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation nisi ut aliquip ex ea
            </p>
            <a href="#" class="home-introduce__btn-signin">Đăng ký ngay</a>
        </div>
        <div class="home-introduce__modal">
            @using (Html.BeginForm("Create", "Customer", FormMethod.Post, new { @class = "home-introduce__form px-3 pt-5 pb-4" }))
            {
                <button class="home-introduce__btn-close"><i class="fas fa-times"></i></button>
                <h3 class="f1">ĐĂNG KÝ THÔNG TIN</h3>
                <div class="mb-3 w-100">
                    @Html.TextBoxFor(model => model.AdmissionModel.Name, new { @class = "form-control", placeholder = "Họ và tên*" })
                    @Html.ValidationMessageFor(model => model.AdmissionModel.Name)
                </div>

                <div class="mb-3 w-100">
                    @Html.TextBoxFor(model => model.AdmissionModel.Address, new { @class = "form-control", placeholder = "Địa chỉ*" })
                    @Html.ValidationMessageFor(model => model.AdmissionModel.Address)
                </div>

                <div class="mb-3 w-100">
                    @Html.TextBoxFor(model => model.AdmissionModel.PhoneNumber, new { @class = "form-control", placeholder = "Số điện thoại*" })
                    @Html.ValidationMessageFor(model => model.AdmissionModel.PhoneNumber)
                </div>

                <div class="mb-3 w-100">
                    <select class="form-control" asp-for="AdmissionModel.EducationLevel" asp-items="Html.GetEnumSelectList<LevelOptions>()">
                        <option selected>Bậc học và đất nước quan tâm</option>
                    </select>
                    @Html.ValidationMessageFor(model => model.AdmissionModel.EducationLevel)
                </div>

                <div class="mb-3 w-100">
                    <select class="form-control" asp-for="AdmissionModel.TypeOfTraining" asp-items="Html.GetEnumSelectList<TypeOptions>()">
                        <option selected>Hình thức học</option>
                    </select>
                    @Html.ValidationMessageFor(model => model.AdmissionModel.TypeOfTraining)
                </div>

                <div class="mb-3 w-100">
                    @Html.TextBoxFor(model => model.AdmissionModel.Desire, new { @class = "form-control", placeholder = "Chuyên ngành hay đất nước bạn muốn đến?" })
                    @Html.ValidationMessageFor(model => model.AdmissionModel.Desire)
                </div>

                <button type="submit" class="btn btn-submit btn-primary">XÁC NHẬN</button>
            }
        </div>
    </div>
</div>

