@model webtuyensinh.ViewModels.PostCreateViewModel

@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Create";
}


<div class="container">
    <h1>Create</h1>
    <div class="row">
        <div class="col-12">
            @using (@Html.BeginForm("PostCreate", "Admin", FormMethod.Post, new { @class = "py-5", enctype = "multipart/form-data" }))
            {
                <div class="mb-3">
                    <select asp-for="CategoryId" class="form-select">
                        <option selected>--Chọn danh mục--</option>
                        @foreach (var category in Model.Categories)
                        {
                            <option value="@category.Id">@category.Name</option>
                        }
                    </select>

                    @Html.ValidationMessageFor(model => model.CategoryId)
                </div>

                <div class="mb-3">
                    <input type="file" name="postedFile" class="form-control" />
                    @Html.ValidationMessageFor(model => model.Avartar)
                </div>

                <div class="mb-3">
                    @Html.TextBoxFor(model => model.Title, new { @class = "form-control", placeholder = "Tiêu đề" })
                    @Html.ValidationMessageFor(model => model.Title)
                </div>

                <div class="mb-3">
                    @Html.HiddenFor(model => model.Tags)
                    <input name='post-tagsinput'
                           id="PostTags"
                           class='some_class_name'
                           placeholder='write some tags'
                           value=''
                           data-blacklist='PHP'>
                </div>

                <div class="mb-3">
                    @Html.TextBoxFor(model => model.Description, new { @class = "form-control", placeholder = "Mô tả" })
                    @Html.ValidationMessageFor(model => model.Description)
                </div>

                <div class="mb-3">
                    @Html.TextAreaFor(model => model.Content, new { @class = "form-control", placeholder = "Nội dung" })
                    @Html.ValidationMessageFor(model => model.Content)
                </div>

                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            }
        </div>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
        var summernote = new webtuyensinh.Models.Sommnernote("#Content");
    }
    <partial name="_Summernote" model="summernote" />
    <script src="~/assets/admin/js/tagsinput.js"></script>
}
