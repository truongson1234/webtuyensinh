@using X.PagedList;
@using X.PagedList.Mvc.Core;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers;
@model X.PagedList.IPagedList<webtuyensinh.Models.PostModel>

@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "QL Tin tức";
}

<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="card mb-4">
                <div class="card-header pb-0">
                    <div class="mb-3">
                        <h6>Danh sách bài viết</h6>
                        <a asp-action="PostCreate" class="text-sm font-weight-bolder opacity-7"><i class="fas fa-plus-square"></i> Thêm bài viết</a>
                    </div>
                    <form method="get" asp-action="PostsManager">
                        <div class="input-group">
                            <span class="input-group-text text-body"><i class="fas fa-search" aria-hidden="true"></i></span>
                            <input type="text" name="searchP" class="form-control" autocomplete="off" placeholder="Tìm kiếm tên người đăng kí...">
                        </div>
                    </form>
                </div>
                <div class="card-body px-0 pt-0 pb-2">
                    <div class="table-responsive p-0">
                        <table class="table align-items-center mb-0">
                            <thead>
                                <tr>
                                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">#ID</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Bài viết</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Danh mục</th>
                                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Ngày ĐK</th>
                                    <th class="text-secondary opacity-7"></th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    int i = 1;
                                    foreach (var @item in Model)
                                    {
                                        <tr>
                                            <td>
                                                <h6 class="mb-0 text-center text-sm">@i</h6>
                                            </td>
                                            <td>
                                                <div class="px-2 py-1">
                                                    <div class="d-flex flex-column justify-content-center">
                                                        <h6 class="mb-0 text-sm">@item.Title</h6>
                                                        <p class="text-xs text-secondary mb-0" style="width: 150px;white-space: nowrap;overflow: hidden;text-overflow: ellipsis;">@item.Description</p>
                                                    </div>
                                                </div>
                                            </td>
                                            <td class="align-middle text-center">
                                                <h6 class="mb-0 text-sm">@item.Category.Name</h6>
                                            </td>
                                            <td class="align-middle text-center">
                                                @if (item.CreatedAt != null)
                                                {
                                                    <span class="text-secondary text-xs font-weight-bold">@item.CreatedAt</span>
                                                }
                                                @if (item.UpdatedAt != null)
                                                {
                                                    <span class="text-secondary text-xs font-weight-bold">@item.UpdatedAt</span>
                                                }
                                            </td>
                                            <td class="align-middle text-center">
                                                <form asp-action="PostDelete" method="post">
                                                    <a asp-action="PostEdit" asp-route-id="@item.Id" class="text-secondary font-weight-bold text-xs">
                                                        Sửa
                                                    </a>
                                                    <span> | </span>
                                                    <input type="submit" value="Xóa" class="border-0 bg-transparent text-secondary font-weight-bold text-xs p-0 m-0" />
                                                    <input hidden type="hidden" name="post_id" value="@item.Id" />
                                                </form>
                                            </td>
                                        </tr>
                                        {
                                            i++;
                                        }
                                    }
                                }
                            </tbody>
                        </table>
                        <div>
                            @Html.PagedListPager(Model, page => Url.Action("PostsManager", new { page }))
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>