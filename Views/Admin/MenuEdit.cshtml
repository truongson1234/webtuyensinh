@model webtuyensinh.ViewModels.MenuViewModel

@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Sửa nhóm menu";
}

<div class="container">
    <h1>Sửa nhóm menu</h1>
    <div class="row">
        <div class="col-md-4">
            @using (@Html.BeginForm("MenuUpdate", "Admin", FormMethod.Post, new { @class = "py-5" }))
            {
                @Html.HiddenFor(model => model.MenuGroup.Id)
                <div class="mb-3">
                    @Html.TextBoxFor(model => model.MenuGroup.Name, new { @class = "form-control", placeholder = "Tên nhóm" })
                    @Html.ValidationMessageFor(model => model.MenuGroup.Name)
                </div>

                <div class="form-group">
                    <input type="submit" value="Update" class="btn btn-primary" />
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}