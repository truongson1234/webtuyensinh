@model webtuyensinh.ViewModels.MenuViewModel

@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Tạo nhóm menu";
}

<div class="container">
    <h1>Tạo nhóm menu</h1>
    <div class="row">
        <div class="col-12">
            @using (@Html.BeginForm("MenuCreate", "Admin", FormMethod.Post, new { @class = "py-5" }))
            {
                <div class="mb-3">
                    @Html.TextBoxFor(model => model.MenuGroup.Name, new { @class = "form-control", placeholder = "Tên nhóm" })
                    @Html.ValidationMessageFor(model => model.MenuGroup.Name)
                </div>

                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}