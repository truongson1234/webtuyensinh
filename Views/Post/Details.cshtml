@model webtuyensinh.ViewModels.PostViewModel

@{
    
    ViewData["Title"] = "Details";
}

<div class="container py-5">
    <div class="row g-5">
        <div class="col-md-8">
            <h3 class="pb-4 mb-4 fst-italic border-bottom">
                @Html.DisplayFor(model => model.Post.Category.Name)
            </h3>

            <article class="blog-post">
                <h2 class="blog-post-title">@Html.DisplayFor(model => model.Post.Title)</h2>
                @if (Model.Post.CreatedAt != null)
                {
                    <p class="blog-post-meta">Đã đăng vào: @Model.Post.CreatedAt.Value.ToString("MMMM, dd, yyyy")</p>
                }
                @if (Model.Post.UpdatedAt != null)
                {
                    <p class="blog-post-meta">Đã sửa vào: @Model.Post.UpdatedAt.Value.ToString("MMMM, dd, yyyy")</p>
                }
                <p>@Html.DisplayFor(model => model.Post.Description)</p>
                <hr>
                <p>@Html.Raw(Model.Post.Content)</p>
            </article>
