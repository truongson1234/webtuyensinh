@model webtuyensinh.ViewModels.PostViewModel

@{
    ViewData["Title"] = "Details";
}

@section Styles {
    <link href="~/assets/css/pages/post.min.css" rel="stylesheet" />
}

<div class="post-details container py-5">
    <div class="row g-5">
        <div class="col-md-4">
            <div class="position-sticky post-details__bar" style="top: 2rem;">
                <div class="p-4 mb-3 rounded post-details__info">
                    <h3 class="fst-italic post-details__cate">@Html.DisplayFor(model => model.Post.Category.Name)</h3>
                    <p class="mb-3 post-details__des">@Html.DisplayFor(model => model.Post.Description)</p>
                    <h5 class="mb-3 post-details__tt">Từ khóa:</h5>
                    <div class="post-details__tags d-flex flex-wrap">
                        @foreach (var tag in Model.Tags)
                        {
                            <a href="/tags/@tag.Name" class="post-details__tags-item">@tag.Name</a>
                        }
                    </div>
                </div>
                <div>
                    @foreach(var r_post in Model.Posts)
                    {
                        <a href="/Post/Details/@r_post.Id">@r_post.Title</a>
                    }
                </div>

